@model Dapper.Portfolio.Application.Dtos.ServiceDto
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-xxl flex-grow-1 container-p-y mt-4">
    <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center bg-primary">
            <h5 class="mb-0  text-white">Servis Ekle</h5>
        </div>
        <div class="card-body mt-2">
            <form method="post">
                <div class="row">
                    <div class="col-sm">
                        <div class="mb-3">
                            <label class="form-label" for="basic-default-company">Servis Adı</label>
                            <input type="text" asp-for="ServiceTitle" class="form-control" id="basic-default-company" />
                        </div>
                    </div>

                    <div class="col-sm">
                        <div class="mb-3">
                            <label class="form-label" for="basic-default-fullname">Servis Resmi</label>
                            <input type="text" asp-for="ServiceIcon" class="form-control" id="basic-default-fullname" />
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="basic-default-company">Açıklama</label>
                        <textarea type="text" asp-for="ServiceDescription" class="form-control" id="basic-default-company"></textarea>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary"><span class="tf-icons bx bx-plus-circle"></span> Ekle</button>
                <a href="/AdminService/Index/" class="btn btn-danger"><span class="tf-icons bx bx-arrow-back"></span> Vazgeç </a>
            </form>
        </div>
    </div>
</div>

