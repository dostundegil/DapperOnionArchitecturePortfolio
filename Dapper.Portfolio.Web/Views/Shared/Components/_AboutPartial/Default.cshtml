@model List<Dapper.Portfolio.Application.Dtos.SkillDto>
<section class="about" id="about">
	<div class="container-fluid">
		<div class="row">
			<div class="col-lg-5 p-0">
				<img src="~/web/images/about1.jpg" alt="" class="img-fluid" />
			</div>
			<div class="col-lg-6">
				<div class="about-right">
					<h4 class="main">Hakkımda / Yeteneklerim</h4>
					<p>
						.Net ile 10'dan fazla proje geliştirerek ilerlediğim bu serüvende, isteklerinizi yerine getirmek için en iyi şekilde çalışacağıma emin olabilirsiniz.
					</p>
					<div class="row mt-sm-5 mt-4 about-right-inner">
						<div class="col-sm-4 col-6 myphoto-sign text-center">
							<img src="~/web/images/myphoto.jpg" alt="" class="img-fluid rounded-circle" />
						</div>
						<div class="col-sm-7 offset-lg-1">
							<h4>Kişisel Bilgi</h4>
							<p>Merhaba, ben <strong>Kaan</strong>.</p>
							<h4 class="mt-4">Yetenekler</h4>
							@foreach (var item in Model)
							{
							<div class="progress-one mt-3">
								<h4 class="progress-tittle">@item.SkillTitle</h4>
								<div class="progress">
										<div class="progress-bar" role="progressbar" style="width: @item.SkillRate%" aria-valuenow="@item.SkillRate" aria-valuemin="0" aria-valuemax="100"></div>
								</div>
							</div>
							}
						</div>
					</div>
				</div>
			</div>
			<h3 class="position">Hakkımda</h3>
		</div>
	</div>
</section>