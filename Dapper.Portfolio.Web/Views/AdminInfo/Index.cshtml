@model Dapper.Portfolio.Application.Dtos.InfoDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center bg-primary">
            <h5 class="mb-0  text-white">Bilgileri Düzenle</h5>
        </div>
        <div class="card-body mt-2">
            <form method="post">
                <div class="row">
                    <div class="col-sm">
                        <input type="hidden" asp-for="InfoID" />
                        <div class="mb-3">
                            <label class="form-label" for="basic-default-fullname">İsim</label>
                            <input type="text" asp-for="InfoTitle" class="form-control" id="basic-default-fullname" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="basic-default-company">Twitter Link</label>
                            <input type="text" asp-for="InfoTwitter" class="form-control" id="basic-default-company" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="basic-default-company">Github Link</label>
                            <input type="text" asp-for="InfoGithub" class="form-control" id="basic-default-company" />
                        </div>
                    </div>
                    <div class="col-sm">
                        <div class="mb-3">
                            <label class="form-label" for="basic-default-company">Unvan</label>
                            <input type="text" asp-for="InfoJob" class="form-control" id="basic-default-company" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label" for="basic-default-company">Instagram Link</label>
                            <input type="text" asp-for="InfoInstagram" class="form-control" id="basic-default-company" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="basic-default-company">LinkedIn Link</label>
                            <input type="text" asp-for="InfoLinkedIn" class="form-control" id="basic-default-company" />
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label" for="basic-default-message">Açıklama</label>
                        <textarea cols="30" rows="5" id="basic-default-message"
                                  class="form-control"
                                  asp-for="InfoDescription"></textarea>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary"><span class="tf-icons bx bx-refresh"></span> Güncelle</button>

            </form>
        </div>
    </div>
</div>